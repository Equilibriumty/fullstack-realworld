{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "verbatimModuleSyntax": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,
    "baseUrl": ".",
    "paths": {
      "@/shared/*": ["./shared/*"],
      "@/*": ["./server/*"]
    },
    "jsxImportSource": "hono/jsx"
  }
}
